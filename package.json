{
  "name": "presstube-landing-small",
  "version": "1.0.0",
  "description": "Brutally minimal landing page for Presstube as a software consultancy.",
  "main": "src/main.js",
  "scripts": {
    "beforebuild": "mkdir -p build && cp index.html build && cp -r assets/ build/assets/",
    "start": "npm run beforebuild && webpack-dev-server -d",
    "start-production": "npm start -p --devtool sourcemap",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/main.js",
    "postversion": "git push && git push --tags",
    "build-production": "npm run beforebuild && webpack -p --devtool sourcemap",
    "deploy-surge": "npm run build-production && surge --domain presstube-studio.surge.sh --project ./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/presstube/turkey.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/presstube/turkey/issues"
  },
  "homepage": "https://github.com/presstube/turkey#readme",
  "dependencies": {
    "lodash": "^4.11.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.2",
    "webpack-livereload-plugin": "^0.8.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "eslint": "^2.8.0",
    "eslint-plugin-react": "^5.0.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ]
  }
}
